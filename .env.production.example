APP_NAME=WizMedik
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.wizmedik.com
APP_FRONTEND_URL=https://wizmedik.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=wizmedik_production
DB_USERNAME=wizmedik_user
DB_PASSWORD=your_secure_password

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.wizmedik.com

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration - CRITICAL FOR EMAIL SYSTEM
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=wizmedik_cache

# Redis Configuration - OPTIMIZED FOR PRODUCTION
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Laravel Horizon Configuration
HORIZON_REDIS_CONNECTION=horizon
HORIZON_PREFIX=wizmedik_horizon:
HORIZON_PATH=horizon
HORIZON_DOMAIN=

# Mail Configuration - PRODUCTION SMTP
MAIL_MAILER=smtp
MAIL_HOST=wizmedik.com
MAIL_PORT=587
MAIL_USERNAME=info@wizmedik.com
MAIL_PASSWORD="97jx8&u3V"
MAIL_FROM_ADDRESS="info@wizmedik.com"
MAIL_FROM_NAME="wizMedik"
MAIL_ENCRYPTION=tls
MAIL_ADMIN_EMAIL="info@wizmedik.com"

# AWS (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
